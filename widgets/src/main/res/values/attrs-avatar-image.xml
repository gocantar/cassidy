<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AvatarImageView">
        <attr name="labelSize" format="dimension" />
        <attr name="labelColor" format="color" />
        <attr name="backgroundAvatarColor" format="color" />
        <attr name="mask" format="boolean" />
        <attr name="avatarStyle" format="enum">
            <enum name="oneInitial" value="0" />
            <enum name="twoInitials" value="1" />
            <enum name="image" value="2" />
        </attr>
        <attr name="backgroundBehaviour" format="enum">
            <enum name="fixed" value="0" />
            <enum name="rainbow" value="1" />
        </attr>
    </declare-styleable>
</resources>